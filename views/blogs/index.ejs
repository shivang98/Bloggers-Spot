<% include ../partials/header %>
<div class="container">
        <header class="jumbotron">
                <div class="container">
                        
                        <h1><span class="glyphicon glyphicon-pencil"></span> Welcome to Blogger's Stop</h1>
                        <p>Freedom to share what you want!</p>
                        <div>
                            <a class="btn btn-primary btn-large" href="/blogs/new">New Blogs</a>
                        </div>
                </div>
        </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-md-6">
                <div class="thumbnail">
                    <img src="<%= blog.image %>" height="500px" width="500px">
                    <div class="caption">
                        <h4><%= blog.name %></h4>
                    </div>
                    <p>
                        <a href="/blogs/<%= blog._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>